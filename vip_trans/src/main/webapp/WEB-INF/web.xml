<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <description>转接所有请求</description>
    <display-name>BasePath</display-name>
    <servlet-name>BasePath</servlet-name>
    <servlet-class>com.world.controller.Base</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>BasePath</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>sitemesh</filter-name>
  	<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>sitemesh</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <jsp-config> 
	        <taglib> 
	            <taglib-uri>http://w.btcbt.com/jstl/functions</taglib-uri> 
	            <taglib-location>/WEB-INF/mytags.tld</taglib-location> 
	        </taglib> 
  </jsp-config>
  
  <!-- Error Pages -->
  <error-page>
      <error-code>404</error-code>
      <location>/errors/404.jsp</location>
  </error-page>
  <error-page>
      <error-code>403</error-code>
      <location>/errors/404.jsp</location>
  </error-page>
  <error-page>
      <error-code>500</error-code>
      <location>/errors/404.jsp</location>
  </error-page>
    
  <listener>
    <listener-class>
      com.tenstar.timer.listener
    </listener-class>
  </listener>
    
   <listener>
    <listener-class>
        com.match.entrust.Listener
    </listener-class>
  </listener>
  
     <listener>
    <listener-class>
        com.match.money.Listener
    </listener-class>
  </listener>
 
 <listener>
    <listener-class>
      com.tenstar.timer.chart.listener
    </listener-class>
 </listener>
  
<listener>
    <listener-class>
      com.tenstar.timer.auto.listener
    </listener-class>
 </listener>
 
 <listener>
    <listener-class>
      com.tenstar.timer.auto.listenerEntrust
    </listener-class>
 </listener>
  
   <listener>
    <listener-class>
      com.tenstar.timer.auto.listenerUser
    </listener-class>
 </listener>
  
    
</web-app>